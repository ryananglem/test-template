{
  "name": "riskui",
  "version": "1.0.0",
  "description": "The user interface for the Risk application",
  "author": "Ian Anderson",
  "scripts": {
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "build": "webpack --config webpack.config.ts",
    "serve": "set NODE_ENV=development&& webpack-dev-server --config webpack.config.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/jest": "^22.0.1",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-redux": "^5.0.14",
    "@types/react-router-dom": "^4.2.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/redux-mock-store": "^0.0.13",
    "@types/webpack": "^3.8.2",
    "awesome-typescript-loader": "^3.4.1",
    "clean-webpack-plugin": "^0.1.17",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.1.1",
    "path": "^0.12.7",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.4.0",
    "source-map-loader": "^0.2.3",
    "standard-version": "^4.3.0",
    "standardts": "^1.0.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "tslint-react": "^3.4.0",
    "tslint-sonarts": "^1.4.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1",
    "worker-loader": "^1.1.0"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-observable": "^0.17.0",
    "rxjs": "^5.5.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|jpeg|png|gif|svg)": "<rootDir>/src/__mocks__/__file_mock__.ts"
    }
  }
}
